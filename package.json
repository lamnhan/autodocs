{
  "name": "@lamnhan/ayedocs",
  "version": "1.0.0-beta6",
  "description": "A Docs-o-matic document generator for Typescript projects.",
  "author": "Lam Nhan",
  "homepage": "https://lamnhan.com",
  "license": "MIT",
  "main": "src/public-api.js",
  "typings": "src/public-api.d.ts",
  "bin": {
    "ayedocs": "src/bin.js"
  },
  "files": [
    "src",
    "!**/*.ts",
    "**/*.d.ts"
  ],
  "scripts": {
    "compile": "tsc",
    "build": "npm.cmd run compile && npm.cmd i -g",
    "docs": "ayedocs generate",
    "test": "npm.cmd run compile && nyc --cache false mocha test/**/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls",
    "check": "gts check",
    "fix": "gts fix"
  },
  "keywords": [
    "docs",
    "typescript",
    "typedoc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lamnhan/ayedocs.git"
  },
  "bugs": {
    "url": "https://github.com/lamnhan/ayedocs/issues"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "chalk": "^4.1.0",
    "commander": "^6.1.0",
    "fs-extra": "^9.0.1",
    "marked": "^1.1.1",
    "prettier": "^2.1.2",
    "tty-table": "^4.1.3",
    "typedoc": "^0.19.1"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/fs-extra": "^9.0.1",
    "@types/marked": "^1.1.0",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.10.2",
    "@types/prettier": "^2.1.1",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "gts": "^2.0.2",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "typescript": "^3.9.3"
  }
}
