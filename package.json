{
  "name": "@lamnhan/autodocs",
  "version": "0.0.1",
  "description": "Document generator for Typescript projects.",
  "author": "Lam Nhan",
  "homepage": "https://lamnhan.com",
  "license": "MIT",
  "main": "./src/public-api.js",
  "typings": "./src/public-api.d.ts",
  "bin": {
    "autodocs": "./src/index.js"
  },
  "files": [
    "src",
    "!**/*.ts"
  ],
  "scripts": {
    "compile": "tsc -p .",
    "lint": "gts check",
    "fix": "gts fix",
    "build": "npm run compile && npm i -g",
    "docs": "typedoc src --out docs --mode file --readme none --excludeNotExported --excludePrivate --excludeProtected",
    "test": "npm run compile && nyc --cache false mocha test/**/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "docs",
    "typescript",
    "typedoc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lamnhan/autodocs.git"
  },
  "bugs": {
    "url": "https://github.com/lamnhan/autodocs/issues"
  },
  "dependencies": {
    "chalk": "^2.4.2",
    "commander": "^3.0.2",
    "fs-extra": "^8.1.0",
    "match-all": "^1.2.5",
    "prettier": "^1.18.2",
    "showdown": "^1.9.0",
    "typedoc": "^0.15.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/fs-extra": "^8.0.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.5",
    "@types/prettier": "^1.18.2",
    "@types/showdown": "^1.9.3",
    "chai": "^4.2.0",
    "coveralls": "^3.0.6",
    "gts": "^1.1.0",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "tslint": "^5.20.0",
    "typescript": "^3.6.3"
  }
}
