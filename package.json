{
  "name": "@lamnhan/ayedocs",
  "version": "0.0.6",
  "description": "A Docs-o-matic document generator for Typescript projects.",
  "author": "Lam Nhan",
  "homepage": "https://lamnhan.com",
  "license": "MIT",
  "main": "./src/public-api.js",
  "typings": "./src/public-api.d.ts",
  "bin": {
    "ayedocs": "./src/index.js"
  },
  "files": [
    "src",
    "!**/*.ts",
    "**/*.d.ts"
  ],
  "scripts": {
    "compile": "tsc -p .",
    "lint": "gts check",
    "fix": "gts fix",
    "build": "npm run compile && npm i -g",
    "docs": "ayedocs generate",
    "test": "npm run compile && nyc --cache false mocha test/**/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls"
  },
  "keywords": [
    "docs",
    "typescript",
    "typedoc"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lamnhan/ayedocs.git"
  },
  "bugs": {
    "url": "https://github.com/lamnhan/ayedocs/issues"
  },
  "dependencies": {
    "app-root-path": "^3.0.0",
    "chalk": "^3.0.0",
    "commander": "^4.0.1",
    "fs-extra": "^8.1.0",
    "marked": "^0.7.0",
    "prettier": "^1.19.1",
    "tty-table": "^2.8.3",
    "typedoc": "^0.15.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.6",
    "@types/fs-extra": "^8.0.1",
    "@types/marked": "^0.7.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.14",
    "@types/prettier": "^1.19.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.9",
    "gts": "^1.1.2",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "tslint": "^5.20.1",
    "typescript": "^3.7.3"
  }
}
